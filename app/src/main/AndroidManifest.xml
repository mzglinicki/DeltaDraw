<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.mzglinicki96.deltaDraw">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:name=".activities.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:windowSoftInputMode="adjustPan">

        <activity
            android:name="com.project.mzglinicki96.deltaDraw.activities.SplashScreenActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name="com.project.mzglinicki96.deltaDraw.activities.DatabaseActivity"
            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name="com.project.mzglinicki96.deltaDraw.activities.DrawCreatingActivity"
            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name="com.project.mzglinicki96.deltaDraw.activities.MainSettingsActivity"
            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name="com.project.mzglinicki96.deltaDraw.activities.CreditsActivity"
            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name="com.project.mzglinicki96.deltaDraw.activities.BluetoothConnectionActivity"
            android:screenOrientation="portrait">

        </activity>

    </application>

</manifest>